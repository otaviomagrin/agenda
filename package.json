{
  "name": "agenda-tarefas",
  "version": "1.0.0",
  "description": "Agenda de Tarefas com notificações Windows",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "start-web": "node server.js",
    "build-win": "electron-builder --win",
    "dist": "electron-builder"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "openai": "^4.59.0"
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.agenda.tarefas",
    "productName": "Agenda de Tarefas",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "electron/agenda.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Agenda de Tarefas",
      "artifactName": "Agenda-de-Tarefas-Setup.exe"
    }
  }
}
